<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arboleda.tifloapp">

    <!--Permite a las aplicaciones tener acceso a la red de internet-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--Permite que la aplicación grabe audio-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--Permite a las aplicaciones acceder a información sobre redes-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TifloApp">
        <activity android:name=".remove.RemoveUserActivity"></activity>
        <activity android:name=".menus.SimpleMenuActivity" />
        <activity android:name=".view.FinalActivity" />
        <activity android:name=".view.SecondUserListActivity" />
        <activity android:name=".view.FirstUserListActivity" />
        <activity android:name=".menulibros.SecondListAdminActivity" />
        <activity android:name=".menulibros.ContentAddActivity" />
        <activity android:name=".ForgotPassActivity" />
        <activity android:name=".menulibros.FileListAdminActivity" />
        <activity android:name=".menulibros.PoesiaAddActivity" />
        <activity android:name=".menulibros.DeleteBook" />
        <activity android:name=".view.NewActivity" /> <!-- <activity android:name=".menulibros.EditBook" /> -->
        <activity android:name=".LoginActivity" />
        <activity android:name=".AuthActivity" />
        <activity android:name=".menus.MasterMenu" />
        <activity android:name=".menulibros.CreateBook" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>