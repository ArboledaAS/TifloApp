<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".remove.RemoveUserActivity"
    android:background="@color/gray03">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/background_personalizado">

        <ImageButton
            android:id="@+id/rbuttomregresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="2dp"
            android:padding="20dp"
            android:src="@drawable/ic_round_home"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/title_Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Eliminar Usuario"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="12dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyvlerremoveuser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_Menu"
        tools:listitem="@layout/row_remove_user_admin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</RelativeLayout>